<!-- res/layout/item_producto.xml -->
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:layout_margin="5dp"
    android:background="@drawable/items"
    android:backgroundTint="#C4E2F3">

<!--
    <CheckBox
        android:id="@+id/checkBoxProducto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:ignore="MissingConstraints" />
    -->

    <androidx.cardview.widget.CardView
        android:id="@+id/cardNombreProducto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:cardElevation="0dp"
        app:cardBackgroundColor="@android:color/transparent"
        >

        <LinearLayout
            android:id="@+id/lyNombreProducto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_margin="5dp"
            android:gravity="center">

            <TextView
                android:id="@+id/nombreProducto"
                android:layout_width="match_parent"
                android:layout_height="33dp"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:textSize="20sp"
                tools:ignore="MissingConstraints" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/lyStockContado"
            android:layout_marginTop="40dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            >

            <TextView
                android:id="@+id/stockProducto"
                android:layout_width="0dp"
                android:layout_weight="2"
                android:layout_height="30dp"
                android:layout_margin="5dp"
                android:textColor="@color/black"
                android:gravity="center"
                android:textSize="18sp"
                android:textStyle="bold"
                app:layout_constraintVertical_bias="0.825" />

            <TextView
                android:id="@+id/precioContadoItem"
                android:layout_width="30dp"
                android:layout_weight="3"
                android:layout_height="50dp"
                android:layout_marginStart="40dp"
                android:textColor="@color/black"
                android:gravity="center"
                android:textAlignment="textStart"
                android:textSize="20sp"
                android:textStyle="bold"
                tools:ignore="MissingConstraints,RtlCompat" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>